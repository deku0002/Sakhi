<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Base Application Theme -->
    <style name="Theme.Sakhi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
    </style>

    <!-- ✅ Primary Button -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>

        <!-- Direct rounded corners -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ✅ Secondary Button -->
    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/purple_500</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>

        <!-- Direct rounded corners -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

</resources>
